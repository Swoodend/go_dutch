extends layout

block vars
 - var title = 'Login'
block body
  h1 Login

  if error
    p Error: #{error}
  
  form(action='/login', method='post')
    p Email
    input(type='text', name='email')
    p Password
    input(type='password', name='password')
    p
    input(type='submit')

  <a href='/register'>click here to register</a>
