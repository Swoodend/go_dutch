extends layout

block vars
  -var title = 'Register'

block body
  
  h1 Sign up now!

  form(action='/register', method='post')
    p First Name
    input(type='text', name='fname')
    p Last name
    input(type='text', name='lname')
    p Email
    input(type='email', name='email')
    p Password
    input(type='password', name='password')
    p
    input(type='submit')
